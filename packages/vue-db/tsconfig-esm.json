{
    "compilerOptions": {
      "target": "esnext",
      "declaration": true,
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "incremental": true,
      "strict": true,
      "noImplicitThis": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "dist/esm",
      "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
  }
  