{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "incremental": true,
      "strict": true,
      "noImplicitThis": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "lib": ["esnext"],
      "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
  }
  